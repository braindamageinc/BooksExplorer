<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="book"
            type="com.r3pi.booksexplorer.BookListItemViewModel"/>
    </data>


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:onClick="@{book::onClick}">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:scaleType="centerInside"
        android:src="@{book.coverURL}"
        tools:src="@android:drawable/alert_light_frame"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@{book.title}"
            tools:text="Lord of the Rings"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@{book.author}"
                tools:text="JRR Tolkien "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:maxLines="1"
                android:text="@{book.year}"
                tools:text="1999"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</layout>